{
  "_comment": "Sheet Data Loader Configuration - See SETUP_GUIDE.md for instructions",
  "_version": "1.0",

  "google_sheets": {
    "_comment": "Google Sheets connection settings",
    "credentials_file": "google_service_account.json",
    "spreadsheet_name": "YOUR_SPREADSHEET_NAME",
    "main_tab": "Sheet1",
    "ticker_column": "A",
    "start_row": 2,
    "tech_data_tab": "Tech_Data",
    "transcripts_tab": "Transcripts"
  },

  "twelve_data": {
    "_comment": "Twelve Data API for technical indicators (free: 800 calls/day)",
    "api_key": "YOUR_TWELVE_DATA_API_KEY",
    "output_size": 365,
    "rate_limit_sleep": 8.0
  },

  "grok": {
    "_comment": "Grok API for transcript summarization",
    "api_key": "YOUR_GROK_API_KEY",
    "model": "grok-4-1-fast-reasoning",
    "summarization_enabled": true,
    "max_summary_tokens": 400
  },

  "defeatbeta": {
    "_comment": "defeatbeta-api settings for earnings transcripts (free, no API key needed)",
    "quarters_to_fetch": 1,
    "min_chars": 600,
    "earliest_year_offset": 1
  },

  "output": {
    "_comment": "Output formatting options",
    "write_status_column": true,
    "timestamp_format": "%Y-%m-%d %H:%M",
    "error_prefix": "ERROR:",
    "no_data_value": "NO_DATA"
  }
}

